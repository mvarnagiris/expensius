<com.mvcoding.expensius.feature.transaction.TransactionItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:minHeight="?actionBarSize"
    android:paddingBottom="@dimen/space_large"
    android:paddingLeft="@dimen/keyline"
    android:paddingRight="@dimen/keyline"
    android:paddingTop="@dimen/space_large">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/keyline"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noteTextView"
            style="@style/TextView"
            android:textAppearance="@style/Text.ListItemTitle"
            tools:text="This is a note for this transaction" />

        <TextView
            android:id="@+id/tagsTextView"
            style="@style/TextView"
            android:textAppearance="@style/Text.Tag.Small"
            tools:text="• Essential  • Food  • Lunch" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="end|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amountTextView"
            style="@style/TextView"
            android:gravity="end"
            android:textAppearance="@style/Text.Money"
            tools:text="1,234.56 $" />

        <TextView
            android:id="@+id/dateTextView"
            style="@style/TextView"
            android:gravity="end"
            android:textAppearance="@style/Text.ListItemSubtitle"
            tools:text="Today" />
    </LinearLayout>


</com.mvcoding.expensius.feature.transaction.TransactionItemView>