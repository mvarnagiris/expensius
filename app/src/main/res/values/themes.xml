<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="themeInverse">@style/AppTheme.Inverse</item>

        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorAccentDark">#EF3071</item>
        <item name="colorActionIcon">#727272</item>
        <item name="colorDivider">#33333333</item>
        <item name="colorExpense">@color/red_700</item>
        <item name="colorIncome">@color/light_green_700</item>
        <item name="colorBackgroundPrimary">#FFFFFF</item>
        <item name="colorBackgroundSecondary">#AAAAAA</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/text_secondary_inverse</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/backgroundWindow</item>
    </style>

    <style name="AppTheme.Inverse">
        <item name="themeInverse">@style/AppTheme</item>

        <item name="colorActionIcon">#EEEEEE</item>
        <item name="colorBackgroundPrimary">#333333</item>
        <item name="colorBackgroundSecondary">#666666</item>

        <item name="android:textColorPrimary">@color/text_primary_inverse</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/text_secondary</item>

        <item name="android:windowBackground">@color/backgroundWindowInverse</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>