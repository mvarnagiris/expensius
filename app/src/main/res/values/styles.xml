<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Text -->
    <!-- =============================================================================================================================== -->

    <style name="Text.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="Text.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="fontPath">fonts/Roboto-Medium.ttf</item>-->
    </style>

    <style name="Text.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Medium.ttf</item>-->
    </style>

    <style name="Text.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="Text.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="Text.Display2" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="Text.Display3" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="Text.Display4" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Light.ttf</item>-->
    </style>

    <style name="Text.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="Text.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Regular.ttf</item>-->
    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Medium.ttf</item>-->
    </style>

    <!-- Button -->
    <!-- =============================================================================================================================== -->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Text.Button</item>
    </style>

    <style name="Button.Flat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAppearance">@style/Text.Button</item>
    </style>

    <style name="Button.Flat.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Flat.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Button.Flat.Borderless.Calc">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/Text.Display1</item>
    </style>

    <style name="Button.Flat.Borderless.Calc.Action">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Button.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?colorActionIcon</item>
        <item name="elevation">@dimen/elevation_fab</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_pressed</item>
        <item name="rippleColor">?colorAccentDark</item>
        <item name="borderWidth">1dp</item>
        <item name="android:theme">@style/AppTheme.Inverse</item>
    </style>

    <!-- ButtonBar -->
    <!-- =============================================================================================================================== -->

    <style name="ButtonBar" parent="Widget.AppCompat.ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:gravity">right</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_fab</item>
        <item name="android:background">?colorBackgroundPrimary</item>
    </style>

    <!-- CardView -->
    <!-- =============================================================================================================================== -->

    <style name="Card" parent="CardView">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">?colorBackgroundPrimary</item>
    </style>

    <!-- EditText -->
    <!-- =============================================================================================================================== -->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Text.Subhead</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>

    <style name="EditText.Big">
        <item name="android:textAppearance">@style/Text.Display1</item>
    </style>

    <!-- RecyclerView -->
    <!-- =============================================================================================================================== -->

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
    </style>

